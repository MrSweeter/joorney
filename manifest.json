{
    "manifest_version": 3,
    "version": "2.0.0",
    "name": "Joorney",
    "description": "Improve your Odoo Journey!",
    "author": "Vanden Bergh GaÃ«tan",
    "homepage_url": "https://github.com/MrSweeter/joorney",
    "action": {
        "default_title": "Joorney",
        "default_popup": "popup/index.html",
        "default_icon": "images/icon_128.png"
    },
    "commands": {
        "enable-disable-temporary": {
            "suggested_key": "Alt+Shift+F",
            "description": "Enable or Disable extension features on the current origin"
        }
    },
    "icons": {
        "16": "images/icon_128.png",
        "32": "images/icon_128.png",
        "48": "images/icon_128.png",
        "128": "images/icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["inject.js"],
            "matches": ["*://*/*"]
        }
    ],
    "permissions": ["tabs", "webNavigation", "cookies", "storage", "contextMenus"],
    "host_permissions": ["http://*/*", "https://*/*"]
}
