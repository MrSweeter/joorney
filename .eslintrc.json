{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2023,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended"],
    "globals": {
        "chrome": "writable",
        "browser": "writable",
        "globalThis": "writable"
    },

    "rules": {
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ]
    }
}
